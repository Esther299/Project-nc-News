{
  "GET /api": {
    "description": "Serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "Serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "POST /api/topics": {
    "description": "Adds a new topic",
    "requestBody": {
      "slug": "string",
      "description": "string"
    },
    "exampleResponse": {
      "topic": {
        "slug": "new_topic",
        "description": "Description of the new topic."
      }
    }
  },
  "GET /api/articles": {
    "description": "Serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "POST /api/articles": {
    "description": "Adds a new article",
    "requestBody": {
      "title": "string",
      "body": "string",
      "author": "string",
      "topic": "string"
    },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "New Article",
        "body": "This is the body of the new article.",
        "author": "new_author",
        "topic": "new_topic",
        "created_at": "2023-06-21T12:00:00Z",
        "votes": 0
      }
    }
  },
  "GET /api/articles/:article_id": {
    "description": "Serves an object of an article searched by its id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 3,
