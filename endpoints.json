{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of an article searched by its id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 3,
        "title": "Eight pug gifs that remind me of mitch",
        "body": "some gifs",
        "author": "icellusedkars",
        "topic": "mitch",
        "created_at": "2020-11-03T08:12:00.000Z",
        "votes": 0,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves and array of comments from the same aritcle",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 10,
          "created_at": "2023-05-28T12:34:56Z",
          "author": "user1",
          "body": "This is a comment.",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a comment to a specific article",
    "requestBody": {
      "username": "string",
      "body": "string"
    },
    "exampleResponse": {
      "comment_id": 19,
      "votes": 0,
      "created_at": "2023-05-28T14:35:47Z",
      "author": "butter_bridge",
      "body": "Hello there Northcoders!",
      "article_id": 9
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the vote count of an specific article",
    "requestBody": { "inc_votes": "number" },
    "exampleResponse": {
      "article_id": 3,
      "title": "icellusedkars",
      "body": "some gifs",
      "votes": 1
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Deletes a specific comment"
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "string",
          "name": "string",
          "avatar_url": "string"
        }
      ]
    }
  }
}
